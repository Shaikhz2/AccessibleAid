

<h1>Entries</h1>
<br/>
  <h6>Search Based on Inquiry Type</h6>
  <%= form_tag entries_path, :method => 'get' do %>
  <%#Creates search bar%>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag ("Search") %>
   
  <br/>

<br/>
<br/>
<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Inquiry Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.first_name %></td>
        <td><%= entry.last_name %></td>
        <td><%= entry.email %></td>
        <td><%= entry.phone %></td>
        <td><%= entry.inquiry_details %></td>
        <td><%= link_to 'Show', entry %></td>
        <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
        <td><%= link_to 'Delete', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Entry', new_entry_path, class:"btn btn-secondary"%>
<%= link_to 'Export Entries as CSV', entries_path(@entry, format: :csv), class:"btn btn-secondary"%>
<% end %>
